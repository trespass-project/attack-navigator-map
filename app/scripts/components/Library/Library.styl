.library-component
	user-select: none

	.search, .add
		margin: 0
		margin-top: 0.5em
		margin-bottom: 0.5em

	.type-filter
		label
			margin-right: 1em
			font-weight: normal

	.results
		max-height: 300px
		overflow-y: auto
		background: lightgrey

		ul
			list-style: none
			margin: 0
			padding: 0
			display: block

			li
				background-color: rgb(245, 245, 245)
				border-radius: 0
				cursor: pointer
				padding-left: 10px
				padding-right: 10px
				padding-top: 5px
				padding-bottom: 5px

			li:hover
				background: gold
